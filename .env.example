# MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Server Port (default: 3000)
PORT=3000

# Memory Storage Path (where to store memory data)
MEMORY_STORAGE_PATH=./data

# Security Settings
# API Key for authentication (generate a secure random string)
# SECURITY WARNING: Replace this placeholder with a strong random value!
API_KEY=REPLACE_WITH_YOUR_SECURE_RANDOM_API_KEY

# Encryption Key for sensitive data (generate a secure random string, min 32 characters)
# SECURITY WARNING: Replace this placeholder with a strong random value (min 32 chars)!
ENCRYPTION_KEY=REPLACE_WITH_32_PLUS_CHARACTER_ENCRYPTION_KEY

# CORS Settings (comma-separated allowed origins)
# DEVELOPMENT: Use specific localhost port for development
# PRODUCTION: Replace with your actual domain, e.g., https://yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000

# Session Settings
# SECURITY WARNING: Replace this placeholder with a strong random value!
SESSION_SECRET=REPLACE_WITH_YOUR_SECURE_SESSION_SECRET

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Database (if using external database)
# DATABASE_URL=sqlite:./memory.db

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000
